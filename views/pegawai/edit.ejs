<%- include('../partials/_head') %>
    <div class="container">
        <div class="rows">
            <div class="col">
                <a href="/pegawai" class="btn btn-success btn-sm mb-3">Kembali</a>
                <form action="/pegawai/update/<%= id %>" method="post">
                    <input type="text" value="<%= nama %>" class="form-controll d-block mb-3" name="nama_pegawai" required>
                    <input type="text" value="<%= nip %>" class="form-controll d-block mb-3" name="nip_pegawai" required>
                    <input type="text" value="<%= jabatan %>" class="form-controll d-block mb-3" name="jabatan_pegawai" required>
                    <button class="btn btn-primary btn-sm">submit</button>
                </form>
            </div>
        </div>
    </div>
