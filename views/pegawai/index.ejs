<%- include(`../partials/_head`) %>
    <div class="container">
        <div class="rows">
            <div class="col">
                <a class="btn btn-success btn-sm" href="/pegawai/create">Tambah</a>
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">no</th>
                        <th scope="col">nama pegawai</th>
                        <th scope="col">nip pegawai</th>
                        <th scope="col">jabatan pegawai</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% for( let i = 0; i < data.length; i++ ) { %>
                            <tr>
                              <th scope="row"><%= (i+1) %></th>
                              <td><%= data[i].nama_pegawai %></td>
                              <td><%= data[i].nip_pegawai %></td>
                              <td><%= data[i].jabatan_pegawai %></td>
                              <td>
                                  <a class="btn btn-warning btn-sm" href="pegawai/edit/<%- data[i].id_pegawai %>">edit</a>
                                  <a class="btn btn-danger btn-sm" href="pegawai/delete/<%- data[i].id_pegawai %>">delete</a>
                              </td>
                            </tr>
                        <% } %>
                    </tbody>
                  </table>
            </div>
        </div>
    </div>
<%- include(`../partials/_footer`) %>