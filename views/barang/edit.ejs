<%- include('../partials/_head') %>
    <div class="container">
        <div class="rows">
            <div class="col">
                <a href="/barang" class="btn btn-success btn-sm mb-3">Kembali</a>
                <form action="/barang/update/<%= id %>" method="post">
                    <input type="text" value="<%= nama %>" class="form-controll d-block mb-3" name="nama_barang" required>
                    <input type="text" value="<%= kode %>" class="form-controll d-block mb-3" name="kode_barang" required>
                    <input type="text" value="<%= merk %>" class="form-controll d-block mb-3" name="merk_spesifikasi_barang" required>
                    <input type="text" value="<%= tahun %>" class="form-controll d-block mb-3" name="tahun_perolehan_barang" required>
                    <input type="text" value="<%= sumber %>" class="form-controll d-block mb-3" name="sumber_perolehan_barang" required>
                    <input type="text" value="<%= jumlah %>" class="form-controll d-block mb-3" name="jumlah_perolehan_barang" required>
                    <input type="text" value="<%= kondisi %>" class="form-controll d-block mb-3" name="kondisi_perolehan_barang" required>
                    <select name="id_penyimpanan" class="d-block mb-3">
                        <% for( let i = 0; i < data2.length; i++ ) { %>
                            <option value="<%= data2[i].id_penyimpanan %>"><%= data2[i].nama_penyimpanan %></option>
                        <% } %>
                    </select>
                    <button class="btn btn-primary btn-sm">submit</button>
                </form>
            </div>
        </div>
    </div>
<%- include('../partials/_footer') %>